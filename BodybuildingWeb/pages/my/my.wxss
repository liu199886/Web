.usermes {
  overflow: hidden;
  position: relative;
  margin: 0 auto;
}
.usermes .head {
  height: 150rpx;
  width: 150rpx;
  border-radius: 10rpx;
  left: 10%;
}
.usermes .user {
  position: relative;
  float: left;
}
.usermes .nickname {
  top: 50rpx;
  left: 15%;
  background-color: yellow;
  word-break: break-word;
  font-size: 50rpx;
  font-weight: bold;
}
.line {
  width: 100%;
  margin-top: 40rpx;
  border-top: 2px #989898 solid;
}
.my_course_list {
  position: relative;
  width: 700rpx;
  overflow: hidden;
  border: 1rpx solid white;
  top: 4%;
  display: flex;
  justify-content: space-around;
  margin: 0 auto;
}
.my_course_list text {
  word-break: break-word;
  color: white;
}
.my_course_list .by_time {
  left: 10rpx;
}
.my_course_list .by_money {
  left: 10rpx;
}
